<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Orientation.MenuButton">
	<ContentView.Content>
		<StackLayout Orientation="Vertical" HorizontalOptions="Center" WidthRequest="128" Padding="0, 5, 0, 5">
			<Image x:Name="image" WidthRequest="32" HeightRequest="32"></Image>
			<Label x:Name="buttonText" FontSize="12" XAlign="Center"></Label>
		</StackLayout>
	</ContentView.Content>
</ContentView>
