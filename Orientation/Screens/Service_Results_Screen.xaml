<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Orientation.Service_Results_Screen" Title="Service Name">
	<ContentPage.Content>
		<StackLayout x:Name="stackLayout">
			<StackLayout VerticalOptions="Start" Padding="15, 30, 15, 0" Spacing="20">
	            <Label x:Name="name" Text="Name: {Binding data}" FontSize="14"></Label>
		        <Label x:Name="description" Text="Description: {Binding data}" FontSize="14"></Label>
		        <Label x:Name="coordinates" Text="Coordinates: {Binding data}" FontSize="14"></Label>
		        <Label x:Name="phone" Text="Phone Number: {Binding data}" FontSize="14"></Label>
		        <Label x:Name="website" Text="Website: {Binding data}" FontSize="14"></Label>
		    </StackLayout>

            <StackLayout VerticalOptions="CenterAndExpand">
            	<Button x:Name="addToFavorite" Text="Add To Favorite"></Button>
            	<Button x:Name="takeMeThere" Text="Take Me There"></Button>
            </StackLayout>

            <StackLayout x:Name="bottomLayout" Orientation="Horizontal" VerticalOptions="End"></StackLayout>
        </StackLayout>
	
	</ContentPage.Content>
</ContentPage>
