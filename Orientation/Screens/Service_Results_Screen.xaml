<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Orientation.Service_Results_Screen">
	<ContentPage.Content>
		
		<StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <TextCell x:Name="name" Text="Name: {Collecting data}"></TextCell>
            <TextCell x:Name="description" Text="Description: {Collecting data}"></TextCell>
            <TextCell x:Name="coordinates" Text="Coordinates: {Collecting data}"></TextCell>
            <TextCell x:Name="phone" Text="Phone Number: {Collecting data}"></TextCell>
            <TextCell x:Name="website" Text="Website: {Collecting data}"></TextCell>
            
            <Button x:Name="addToFavorite" Text="Add To Favorite" Clicked="OnAddToFavorite" />
            <Button x:Name="takeMeThere" Text="Take Me There" Clicked="OnTakeMeThere" />
        </StackLayout>	
	
	</ContentPage.Content>
</ContentPage>
