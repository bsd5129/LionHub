<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Orientation.Home_Screen"
			 Title="Home">
	<ContentPage.Content>
		<!--Layout for the vertical orientation-->
		<StackLayout x:Name="stackLayout" Padding="15, 20, 15, 0">
			<!--PSU Banner-->
			<Image Source ="psuLogo.png" />
			
			<Grid x:Name="grid" Padding="15, 20, 15, 0">
				<Grid.RowDefinitions>
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
					<RowDefinition Height="48" />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
			</Grid>

			<Label XAlign="Center" Text=" "></Label>
			<Label x:Name="copyright" XAlign="Center" Text="Senior Project 2016"></Label>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>