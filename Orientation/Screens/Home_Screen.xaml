<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Orientation.Home_Screen"
			 Title="Home">
	<ContentPage.Content>
		<StackLayout x:Name="stackLayout" Padding="15, 0, 15, 15">
		<Image x:Name="psuLogo" Source ="psuLogo.png" />
			
			<Grid x:Name="grid" Padding="15, 0, 15, 0" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
			</Grid>

			<Label x:Name="copyright" XAlign="Center" VerticalOptions="EndAndExpand" Text="Senior Project 2016"></Label>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>